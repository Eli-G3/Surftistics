<layouts>
    <layout id="MonitoringLayout">
        <label
                id="m_title"
                x="center"
                font="Graphics.FONT_MEDIUM"
                y="20%"
                text="@Strings.monitoring_title"
                color="Graphics.COLOR_GREEN"
                justification="Graphics.TEXT_JUSTIFY_CENTER"
        />
        <label
                id="m_prompt"
                x="center"
                font="Graphics.FONT_SMALL"
                y="60%"
                text="@Strings.monitoring_prompt"
                color="Graphics.COLOR_WHITE"
                justification="Graphics.TEXT_JUSTIFY_CENTER"
        />
    </layout>
    <layout id="MainLayout">
        <label
                id="Title"
                x="center"
                font="Graphics.FONT_MEDIUM"
                y="20%"
                text="@Strings.Title"
                color="Graphics.COLOR_WHITE"
                justification="Graphics.TEXT_JUSTIFY_CENTER"
        />
        <label
                id="prompt"
                x="center"
                font="Graphics.FONT_SMALL"
                y="60%"
                text="@Strings.prompt"
                color="Graphics.COLOR_WHITE"
                justification="Graphics.TEXT_JUSTIFY_CENTER"
        />
    </layout>
</layouts>
